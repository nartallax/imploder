{ 
    "imploderConfig": {
        "entryModule": "main.ts",
        "entryFunction": "main",
        "outFile": "js/bundle.js",
        "noLoaderCode": true,
        "minify": true,
        "target": "ES2018",
        "plugins": [{
            "transform": "../transformer_throw_error/tsconfig.json",
            "imploderProject": true,
            "type": "imploder"
        }]
    },
    
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "js",
        "paths": {
            "*": ["./*"]
        }
    }
}
